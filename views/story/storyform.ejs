<%- partial ('../navigation.ejs') %>
<div class="container" ng-app="storyApp">
    <form class="form-horizontal" ng-controller="storyCtrl">
        <fieldset>
            <legend> New Story </legend>
            <div class="form-group">
                <label for="title">Title</label>
                <input ng-model="title" class="form-control" type="text" name="title" id="title" placeholder="Title" required>
            </div>
            <div class="form-group">
                <label for="summary">Summary</label>
                <textarea ng-model="summary" name="summary" id="summary"></textarea>
            </div>
            <div class="form-group">
                <button ng-click="save()" class="btn btn-primary">Submit</button>
            </div>
        </fieldset>
    </form>
</div>
<% block('localScripts', '<script src="/js/angular/controllers/storyapp.js"></script>') %>

<script src="/js/vendor/exclude/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({
    selector: "#summary",
    plugins: [
        "bbcode"
    ],
    toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
});
</script>
